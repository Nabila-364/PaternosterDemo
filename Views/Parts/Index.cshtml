@model IEnumerable<PaternosterDemo.Models.Part>

@{
    ViewData["Title"] = "Onderdelen overzicht";
}

<h1>Onderdelen overzicht</h1>

<a class="btn btn-success mb-3" asp-action="Create">Nieuw onderdeel</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Artikelnummer</th>
            <th>Naam</th>
            <th>Beschrijving</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ArticleNumber</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.PartId">Bewerk</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.PartId">Verwijder</a>
            </td>
        </tr>
    }
    </tbody>
</table>
