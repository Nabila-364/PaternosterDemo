@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaternosterDemo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PaternosterDemo.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        // null-safe ophalen van session
        var session = HttpContextAccessor?.HttpContext?.Session;
        int? sessionUserId = session?.GetInt32("UserId");
        bool isLoggedIn = sessionUserId.HasValue;
        var username = session?.GetString("Username") ?? string.Empty;
        var role = session?.GetString("Role") ?? string.Empty;
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">PaternosterDemo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Linkerkant -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Cabinets" asp-action="Index">Kasten</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Parts" asp-action="Index">Onderdelen</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Inventory" asp-action="Index">Voorraad</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Transactions" asp-action="Index">Transacties</a></li>
                    </ul>

                    <!-- Rechterkant (login/logout) -->
                    <ul class="navbar-nav">
                        @if (!isLoggedIn)
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-warning" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item d-flex align-items-center me-3 text-white">
                                Hallo <strong class="ms-2 me-2">@username</strong>
                                <span class="badge bg-info text-dark">@role</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-3 py-2 bg-light">
        <div class="container text-center">
            &copy; 2025 - PaternosterDemo -
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
