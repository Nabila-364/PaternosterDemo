@model PaternosterDemo.Models.Cabinet
@{
    ViewData["Title"] = "Verwijder Kast";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-exclamation-triangle"></i> Bevestig Verwijdering</h4>
        </div>
        <div class="card-body">
            <p>Weet je zeker dat je deze kast wilt verwijderen?</p>
            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Kastnummer:</strong> @Model.CabinetNumber</li>
                <li class="list-group-item"><strong>Locatie:</strong> @Model.Location</li>
            </ul>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CabinetId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Verwijderen
                </button>
                <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
            </form>
        </div>
    </div>
</div>
