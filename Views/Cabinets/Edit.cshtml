@model PaternosterDemo.Models.Cabinet

@{
    ViewData["Title"] = "Bewerk kast";
}

<h1>Bewerk kast</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CabinetId" />

    <div class="mb-3">
        <label>Kastnummer</label>
        <input asp-for="CabinetNumber" class="form-control" />
        <span asp-validation-for="CabinetNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Locatie</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Capaciteit</label>
        <input asp-for="Capacity" type="number" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a class="btn btn-secondary" asp-action="Index">Annuleren</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
