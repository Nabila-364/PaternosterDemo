@model PaternosterDemo.Models.Cabinet

<h1>Kast bewerken</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CabinetId" />

    <div>
        <label asp-for="CabinetNumber"></label>
        <input asp-for="CabinetNumber" class="form-control"/>
        <span asp-validation-for="CabinetNumber" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control"/>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" type="number" min="0" class="form-control"/>
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <button type="submit">Opslaan</button>
</form>

<div>
    <a asp-action="Index">Terug naar lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
