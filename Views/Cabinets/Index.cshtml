@model IEnumerable<PaternosterDemo.Models.Cabinet>

@{
    ViewData["Title"] = "Kasten";
}

<h1>Kasten</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Nieuwe kast</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kastnummer</th>
            <th>Locatie</th>
            <th>Capaciteit</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cabinet in Model)
        {
            <tr>
                <td>@cabinet.CabinetNumber</td>
                <td>@cabinet.Location</td>
                <td>@cabinet.Capacity</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@cabinet.CabinetId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@cabinet.CabinetId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
