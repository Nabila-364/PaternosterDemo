@model IEnumerable<PaternosterDemo.Models.User>
@{
    ViewData["Title"] = "Gebruikersoverzicht";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">👥 Gebruikersoverzicht</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Gebruikersnaam</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Username</td>
                    <td>
                        @if (user.Role == "Admin")
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Medewerker</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="/Home" class="btn btn-secondary">⬅️ Terug naar dashboard</a>
    </div>
</div>

<style>
    table {
        border-radius: 10px;
        overflow: hidden;
    }
</style>
