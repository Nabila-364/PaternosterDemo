@model PaternosterDemo.Models.Inventory

@{
    ViewData["Title"] = "Verwijderen";
}

<div class="container mt-5">
    <h3 class="text-danger">Weet u zeker dat u dit item wilt verwijderen?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Onderdeel</dt>
        <dd class="col-sm-9">@Model.Part?.Name</dd>

        <dt class="col-sm-3">Kast</dt>
        <dd class="col-sm-9">@Model.Cabinet?.CabinetNumber</dd>

        <dt class="col-sm-3">Aantal</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>
    </dl>

    <form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="InventoryId" />
        <button type="submit" class="btn btn-danger">Ja, verwijderen</button>
        <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
    </form>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Weet u zeker dat u dit item wilt verwijderen?');
        }
    </script>
}
