@model PaternosterDemo.Models.Inventory

<h1>Voorraad verwijderen</h1>

<h3>Weet je zeker dat je deze voorraad wilt verwijderen?</h3>

<div>
    <p>Onderdeel: @Model.Part?.Name</p>
    <p>Kast: @Model.Cabinet?.CabinetNumber</p>
    <p>Aantal: @Model.Quantity</p>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="InventoryId" />
    <button type="submit">Verwijderen</button>
    <a asp-action="Index">Annuleren</a>
</form>
