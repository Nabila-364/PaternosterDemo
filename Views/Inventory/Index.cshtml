@model IEnumerable<PaternosterDemo.Models.Inventory>

<h1>Voorraad overzicht</h1>

<p>
    <a asp-action="Create">Nieuwe voorraad toevoegen</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Onderdeel</th>
            <th>Kast</th>
            <th>Aantal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Part?.Name</td>
            <td>@item.Cabinet?.CabinetNumber</td>
            <td>@item.Quantity</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InventoryId">Bewerken</a>
                @if (ViewBag.IsAdmin == true)
                {
                    <text> | <a asp-action="Delete" asp-route-id="@item.InventoryId">Verwijderen</a></text>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
