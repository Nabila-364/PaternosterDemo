@model IEnumerable<PaternosterDemo.Models.Inventory>

@{
    ViewData["Title"] = "Voorraad overzicht";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<h1>Voorraad overzicht</h1>

<a class="btn btn-success mb-3" asp-action="Create">Nieuwe voorraad</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Onderdeel</th>
            <th>Kast</th>
            <th>Aantal</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Part?.Name</td>
            <td>@item.Cabinet?.CabinetNumber</td>
            <td>@item.Quantity</td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.InventoryId">Bewerk</a>
                @if(isAdmin)
                {
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.InventoryId">Verwijder</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
