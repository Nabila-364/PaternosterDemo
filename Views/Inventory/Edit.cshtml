@model PaternosterDemo.Models.Inventory

<h2>Voorraad aanpassen</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="InventoryId" />

    <div>
        <label>Onderdeel</label>
        <select asp-for="PartId" asp-items="ViewBag.Parts"></select>
    </div>

    <div>
        <label>Kast</label>
        <select asp-for="CabinetId" asp-items="ViewBag.Cabinets"></select>
    </div>

    <div>
        <label>Aantal</label>
        <input asp-for="Quantity" type="number" min="0" />
    </div>

    <button type="submit">Opslaan</button>
</form>
