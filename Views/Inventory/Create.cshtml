@model PaternosterDemo.Models.Inventory

@{
    ViewData["Title"] = "Nieuwe voorraad";
}

<h1>Nieuwe voorraad</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Onderdeel</label>
        <select asp-for="PartId" class="form-select" asp-items="@(ViewData["Parts"] as SelectList)"></select>
        <span asp-validation-for="PartId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Kast</label>
        <select asp-for="CabinetId" class="form-select" asp-items="@(ViewData["Cabinets"] as SelectList)"></select>
        <span asp-validation-for="CabinetId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Aantal</label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Opslaan</button>
    <a class="btn btn-secondary" asp-action="Index">Annuleren</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
